<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DesignBuildPlanIT</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr-2.6.js")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="col-md-4">
            <a href="~/"><img src="~/images/dbpi-logo-web-2018.png" alt="..." /></a>
        </div>
            <div class="container col-md-8">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("DBPI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>





    </div>
    <div class="container body-content" style="margin-top:140px;">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:#000"> &copy; @DateTime.Now.Year - <a href="http://e3imagegroup.com">DesignBuildPlanIT</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
