@model IEnumerable<E3DBPI.Models.Company>

@{
    ViewBag.Title = "Companies";
}


<div class="listing container" >
    <h2>@ViewBag.co_cName @ViewBag.Title</h2>
    <table class="table" id="companylist">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Company
                </th>
                <th>
                    Service
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Website
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email1)
                </td>
                <td>
                    <a href="http://@Html.DisplayFor(modelItem => item.WebSite)" target="_blank">@Html.DisplayFor(modelItem => item.WebSite)</a>
                    @*@Html.DisplayFor(modelItem => item.Employees.EmployeeID)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td width="15%">
                    @Html.ActionLink("View", "Details", new { id = item.CompanyID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.CompanyID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CompanyID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }

    </table>
</div>


    <div class="col-md-12">
        <p class="buttonbox">
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-lg btn-primary" role="button" aria-disabled="true">Return</a>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("SuperAdmin"))
                {
                    @Html.ActionLink("Create a New Company", "Create", "Companies", new { }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                }
            }
        </p>

    </div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#companylist').DataTable();
        });
    </script>
}
