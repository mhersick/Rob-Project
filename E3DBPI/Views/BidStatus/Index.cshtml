@model IEnumerable<E3DBPI.Models.BidStatu>

@{
    ViewBag.Title = "Bid Status Listing";
}

<div class="listing">
    <h2>@ViewBag.co_cName @ViewBag.Title</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BidStatusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sequence)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BidStatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sequence)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BidStatusID }, htmlAttributes: new { @class = "btn btn-smform btn-info" })
                    @Html.ActionLink("View", "Details", new { id = item.BidStatusID }, htmlAttributes: new { @class = "btn btn-smform btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.BidStatusID }, htmlAttributes: new { @class = "btn btn-smform btn-warning" })
                </td>
            </tr>
        }

    </table>
    </div>
    <div class="col-md-12" style="text-align:center;margin-top:40px;">
        @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("SuperAdmin"))
                {
                <p>@Html.ActionLink("Create a New BidStatus", "Create", "BidStatus", new { }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })</p>
            }
        }
    </div>
