@model IEnumerable<E3DBPI.Models.Employee>

@{
    ViewBag.Title = "Employees / Seats";
}


<div class="listing">
    <h2>@ViewBag.co_cName @ViewBag.Title</h2>


    <table class="table">
        <tr>
            <th>
                UserName
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("View", "Details", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-smform btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-smform btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-smform btn-warning" })
                </td>
            </tr>
        }

    </table>

    <div class="col-md-12" style="text-align:center;margin-top:40px;">
        @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("CompanyAdmin"))
                {

                <p>
                    @Html.ActionLink("Create a New Employee", "CreateEmployee", new { }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                </p>
            }
        }

    </div>





</div>