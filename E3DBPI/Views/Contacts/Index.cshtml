@model IEnumerable<E3DBPI.Models.Contact>

@{
    ViewBag.Title = "Incoming Contact Form Listing";
}

<h2>@ViewBag.Title</h2>

<div class="listing container">
    <table class="table" id="contactslist">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MessageText)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageText)
                    </td>
                    <td width="15%">
                        @Html.ActionLink("View", "Details", new { id = item.ContactID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.ContactID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ContactID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                    </td>
                </tr>
            }

    </table>
</div>
    @section scripts{
        @Styles.Render("~/Content/bootstrap1.css")

        <script>
            $(document).ready(function () {
                $("#contactslist").DataTable();
            });
        </script>
    }
