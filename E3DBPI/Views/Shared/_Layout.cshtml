                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">@Html.ActionLink("Site Admin", "Index", "Admin", new { }, htmlAttributes: new { @class = "nav-link text-dark bg-warning rounded m-1 h8" })</li>
                        }
                        if (User.IsInRole("CompanyAdmin"))
                        {
                            <li class="nav-item">@Html.ActionLink("Company Admin", "Index", "CompanyAdmin", new { }, htmlAttributes: new { @class = "nav-link text-dark bg-warning rounded m-1 h8" })</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
