@model IEnumerable<E3DBPI.Models.Project>

@{
    ViewBag.Title = "Projects";
}


<div class="listing container">
    <h2>@ViewBag.co_cName @ViewBag.Title</h2>

    <h4>Company Projects</h4>
    <table class="table" id="projectlista">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BidOpenDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BidCloseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDate)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpenDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidOpenDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidCloseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td width="15%">
                    @Html.ActionLink("View", "Details", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }

    </table>

    <h4>Projects Awarded through the Bid process</h4>
    <table class="table" id="projectlistb">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BidOpenDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BidCloseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDate)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpenDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidOpenDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidCloseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td width="15%">
                    @Html.ActionLink("View", "Details", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }

    </table>

        <p class="buttonbox">
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-lg btn-primary" role="button" aria-disabled="true">Return</a>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("CompanyAdmin"))
                {
                    @Html.ActionLink("Create a New Project", "Create", new { }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
                }
            }
        </p>



</div>

    @section scripts{
        <script>
            $(document).ready(function () {
                $("#projectlista").DataTable();
                $("#projectlistb").DataTable();
            });
        </script>
    }

