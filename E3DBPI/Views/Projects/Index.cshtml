@model IEnumerable<E3DBPI.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h2>@ViewBag.co_cName @ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidOpenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidCloseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidOpenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidCloseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidStatus)
        </td>
        <td>
            @Html.ActionLink("View", "Details", new { id = item.ProjectID }, htmlAttributes: new { @class = "btn btn-smform btn-info" }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectID }, htmlAttributes: new { @class = "btn btn-smform btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProjectID }, htmlAttributes: new { @class = "btn btn-smform btn-warning" })
        </td>
    </tr>
}

</table>

<div class="col-md-12" style="text-align:center;margin-top:40px;">
    @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("CompanyAdmin"))
                {

            <p>
                @Html.ActionLink("Create a New Project", "Create", new { }, htmlAttributes: new { @class = "btn btn-lg btn-primary" })
            </p>
        }
    }

</div>


